            android:layout_height="wrap_content"
            android:text="Line4"
            android:textSize="70sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#ffccffcc" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Line5"
            android:textSize="70sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#ffccffcc" />

